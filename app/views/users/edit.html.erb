<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>User info</h2>
      <%= render 'layouts/error',error:@user %>
      <%= form_with model:@user do |f| %>
        <div class="form-group">
          <label for="imputName">Name</label>
          <%= f.text_field:name,class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="imputImage">Image</label><br>
          <%= f.file_field:profile_image,accept:"image/*" %>
        </div>
        <div class="form-group">
          <label for="imputIntroduction">Introduction</label>
          <%= f.text_area:introduction,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User",class:"btn btn-md btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

