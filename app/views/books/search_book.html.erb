<h2>Books search for "<%= @keyword %>"</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image,size:'50x50' %></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td><%= link_to book.tag,search_book_path(keyword: book.tag) %></td>
      <td id="favorite-btn<%= book.id %>">
        <%= render 'favorites/favorite',book:book %>
      </td>
      <td>コメント数:<span id="comment_count"><%= render 'book_comments/comment_count',book:book %></span></td>
      <td><%= render "books/star-rate",book:book %></td>
    </tr>
    <% end %>
  </tbody>
</table>